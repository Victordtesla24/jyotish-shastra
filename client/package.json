{
  "name": "jyotish-shastra-vedic-chart",
  "version": "1.0.0",
  "description": "Template-exact Vedic birth chart implementation with comprehensive testing",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:validate": "node tests/utils/AutomatedTestRunner.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:validate",
    "lint": "eslint src/ tests/ --ext .js,.jsx",
    "lint:fix": "eslint src/ tests/ --ext .js,.jsx --fix",
    "deploy": "./deploy_vedic_chart_enhanced.sh",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.81.5",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.3.2",
    "clsx": "^2.1.1",
    "d3": "^7.8.5",
    "dayjs": "^1.11.10",
    "framer-motion": "^12.22.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.59.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^7.6.3",
    "react-select": "^5.10.1",
    "recharts": "^2.8.0",
    "svg-path-parser": "^1.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cypress": "^13.6.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "react-scripts": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "keywords": [
    "vedic",
    "astrology",
    "kundli",
    "birth-chart",
    "jyotish",
    "react",
    "template-matching",
    "api-driven"
  ],
  "author": "Vedic Chart Development Team",
  "license": "MIT"
}
