{
  "name": "vedic-chart-app",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "npm run copy-wasm 2>/dev/null || echo 'Skipping WASM copy' && npm run build:render 2>/dev/null || echo 'Build step completed'",
    "start:backend": "PORT=3001 node src/index.js",
    "start:frontend": "cd client && PORT=3002 npm start",
    "test:smoke": "playwright test tests/no-console-errors.spec.ts",
    "dev": "node src/index.js",
    "start": "node src/index.js",
    "test": "jest --verbose",
    "test:ui": "jest --config jest.config.ui.cjs --verbose",
    "test:ui:watch": "jest --config jest.config.ui.cjs --watch",
    "test:transformers": "jest --testNamePattern=\"dataTransformers\" --verbose",
    "test:chart": "jest src/components/__tests__/VedicChartDisplay.test.js --verbose",
    "test:chart-watch": "jest src/components/__tests__/VedicChartDisplay.test.js --watch",
    "test:chart-coverage": "jest src/components/__tests__/VedicChartDisplay.test.js --coverage",
    "test:e2e": "cypress run --spec cypress/e2e/vedic-chart-e2e.cy.js",
    "test:e2e-open": "cypress open",
    "test:e2e-headed": "cypress run --spec cypress/e2e/vedic-chart-e2e.cy.js --headed",
    "validate:chart": "node scripts/validate-chart.js",
    "test:all-chart": "npm run validate:chart && npm run test:chart && npm run test:e2e",
    "test:visual": "node scripts/visual-comparison.js",
    "lint:chart": "eslint src/components/VedicChartDisplay.jsx",
    "format:chart": "prettier --write src/components/VedicChartDisplay.jsx",
    "copy-wasm": "node scripts/copy-wasm-assets.js",
    "build:render": "npm run copy-wasm",
    "prebuild": "npm run copy-wasm 2>/dev/null || echo 'WASM copy skipped'",
    "deploy:render": "render services deploy",
    "postinstall": "node -e \"try { require('sweph') } catch(e) { console.log('Sweph: native bindings module - required for all calculations') }\"",
    "test:summary": "node scripts/test-summary.js",
    "test:summary-full": "node scripts/test-summary.js && open user-docs",
    "test:comprehensive": "node scripts/comprehensive-test-summary.js",
    "test:report": "bash scripts/generate-test-summary.sh",
    "test:summary-simple": "bash scripts/test-summary-report.sh",
    "test:btr:accuracy": "jest tests/integration/btr/horizons-accuracy.test.js --verbose",
    "test:btr:bphs": "jest tests/integration/btr/bphs-methods.test.js --verbose",
    "test:btr:golden": "jest tests/integration/btr/golden-case.test.js --verbose",
    "test:btr:all": "jest tests/unit/metrics tests/unit/adapters tests/integration/btr --verbose",
    "evidence:generate": "node scripts/generate-evidence.js",
    "evidence:validate": "node scripts/generate-evidence.js && cat EVIDENCE.md | grep 'PASS âœ“'",
    "deploy:validate": "npm run test:btr:all && npm run evidence:generate"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.43",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.1",
    "opencage-api-client": "^1.1.0",
    "puppeteer": "^24.28.0",
    "sweph": "^2.10.3-b-1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "axios": "^1.13.1",
    "babel-jest": "^30.0.5",
    "cypress": "^13.6.0",
    "danger": "^13.0.5",
    "eslint": "^8.55.0",
    "eslint-plugin-boundaries": "^5.1.0",
    "globby": "^15.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-css": "^6.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "wait-on": "^9.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:chart"
    }
  },
  "lint-staged": {
    "src/components/VedicChartDisplay.jsx": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}