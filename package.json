{
  "name": "vedic-chart-app",
  "type": "module",
  "scripts": {
    "dev": "node src/index.js",
    "start": "node src/index.js",
    "test": "jest --verbose",
    "test:ui": "jest --config jest.config.ui.cjs --verbose",
    "test:ui:watch": "jest --config jest.config.ui.cjs --watch",
    "test:transformers": "jest --testNamePattern=\"dataTransformers\" --verbose",
    "test:chart": "jest src/components/__tests__/VedicChartDisplay.test.js --verbose",
    "test:chart-watch": "jest src/components/__tests__/VedicChartDisplay.test.js --watch",
    "test:chart-coverage": "jest src/components/__tests__/VedicChartDisplay.test.js --coverage",
    "test:e2e": "cypress run --spec cypress/e2e/vedic-chart-e2e.cy.js",
    "test:e2e-open": "cypress open",
    "test:e2e-headed": "cypress run --spec cypress/e2e/vedic-chart-e2e.cy.js --headed",
    "validate:chart": "node scripts/validate-chart.js",
    "test:all-chart": "npm run validate:chart && npm run test:chart && npm run test:e2e",
    "test:visual": "node scripts/visual-comparison.js",
    "lint:chart": "eslint src/components/VedicChartDisplay.jsx",
    "format:chart": "prettier --write src/components/VedicChartDisplay.jsx",
    "copy-wasm": "node scripts/copy-wasm-assets.js",
    "build:render": "npm run copy-wasm",
    "prebuild": "npm run copy-wasm",
    "deploy:render": "render services deploy",
    "postinstall": "node -e \"try { require('sweph-wasm') } catch(e) { console.log('Sweph-WASM: optional module during build, will fail gracefully at runtime if unavailable') }\"",
    "test:summary": "node scripts/test-summary.js",
    "test:summary-full": "node scripts/test-summary.js && open user-docs",
    "test:comprehensive": "node scripts/comprehensive-test-summary.js",
    "test:report": "bash scripts/generate-test-summary.sh",
    "test:summary-simple": "bash scripts/test-summary-report.sh"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.43",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.1",
    "opencage-api-client": "^1.1.0",
    "sweph-wasm": "^2.6.9",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.0.5",
    "cypress": "^13.6.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-css": "^6.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:chart"
    }
  },
  "lint-staged": {
    "src/components/VedicChartDisplay.jsx": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
