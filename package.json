{
  "name": "vedic-chart-app",
  "type": "module",
  "scripts": {
    "dev": "node src/index.js",
    "start": "node src/index.js",
    "test:chart": "jest src/components/__tests__/VedicChartDisplay.test.js --verbose",
    "test:chart-watch": "jest src/components/__tests__/VedicChartDisplay.test.js --watch",
    "test:chart-coverage": "jest src/components/__tests__/VedicChartDisplay.test.js --coverage",
    "test:e2e": "cypress run --spec cypress/e2e/vedic-chart-e2e.cy.js",
    "test:e2e-open": "cypress open",
    "test:e2e-headed": "cypress run --spec cypress/e2e/vedic-chart-e2e.cy.js --headed",
    "validate:chart": "node scripts/validate-chart.js",
    "test:all-chart": "npm run validate:chart && npm run test:chart && npm run test:e2e",
    "test:visual": "node scripts/visual-comparison.js",
    "lint:chart": "eslint src/components/VedicChartDisplay.jsx",
    "format:chart": "prettier --write src/components/VedicChartDisplay.jsx"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.43",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "opencage-api-client": "^1.1.0",
    "puppeteer": "^24.11.2",
    "swisseph": "^0.5.17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "cypress": "^13.6.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/components/VedicChartDisplay.jsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:chart"
    }
  },
  "lint-staged": {
    "src/components/VedicChartDisplay.jsx": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
